@page
@model Emigrant.App.Frontend.Pages.RegistroNecesidadModel
@{
}
@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<h1 class="titulo-registro">Registro Necesidad</h1>
<form method="post">
    <input type="hidden" asp-for="necesidad.id">

    <div class="form-row">
        <div class="form-group col-md-12">

            <input type="hidden" asp-for="necesidad.Migrante" value=@UserManager.GetUserId(User) class="form-control">
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-12">
            <label asp-for="necesidad.detalles"></label>
            <input asp-for="necesidad.detalles" class="form-control">
            <span class="text-danger" asp-validation-for="necesidad.detalles"></span>
        </div>
    </div>


    <div class="form-row">

        <div class="form-group col-md-6">
            <label asp-for="necesidad.tipoServicio"></label>
            <select asp-for="necesidad.tipoServicio" class="form-control" aria-label=".form-select-lg example">
                <option selected>Seleccion tipo novedad</option>
                <option value=1>Salud</option>
                <option value=2>Juridico</option>
                <option value=3>Empleo</option>
                <option value=4>Alojamiento Temporal</option>
                <option value=5>Alojamiento Permanente</option>
                <option value=6>Educaci√≥n</option>
            </select>
            <span class="text-danger" asp-validation-for="necesidad.tipoServicio"></span>
        </div>


        <div class="form-group col-md-6">
            <label asp-for="necesidad.prioridad"></label>
            <select asp-for="necesidad.prioridad" class="form-control" aria-label=".form-select-lg example">
                <option selected>Seleccion ciudad</option>
                <option value="1">Baja</option>
                <option value="2">Media</option>
                <option value="3">Alta</option>
            </select>
            <span class="text-danger" asp-validation-for="necesidad.prioridad"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-5">Registrar</button>
    </div>

</form>
